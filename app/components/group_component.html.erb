<%= link_to user_group_path(@group.user_id, @group)  do %>
    <div class="m-5 p-6 rounded-lg shadow-lg bg-white">
        <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">  <%= @name %></h5>
    <%end%>
</div>

    
    <% if @group_membership %>
    <%= button_to 'Leave', user_group_member_path(@current_user.id, @group.id, @member.id), :method => :delete, data: { confirm: 'Are you sure?' }, class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>

    <% else %>

    <%= form_with model: Member, data: { turbo: false }, url: user_group_members_path(@current_user.id, @group.id) do |f| %>
            <%= f.submit "Join", class: "w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"%> 
<% end %>
    <% end %>
