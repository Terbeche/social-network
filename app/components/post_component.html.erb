<div class="flex" data-post-target="postBlock">
     
      <%= link_to user_group_post_path(@post.user_id, @group, @post)  do %>
        <span class="text-gray-900 text-xl leading-tight font-medium mb-2">  <%= @title %></span>
    <%end%>
    <br>
    <p><%= @body %></p>
    <br>
    </div>

  <%if @current_user.id == @post.user_id %>
       <span data-post-target="postManipulationBlock">

  <%=button_to 'Edit post', edit_user_group_post_path(@current_user, @group, @post.id), :method => :get, class: "w-fit text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    <span data-action="click->post#delete"> <%=button_to 'Delete post', user_group_post_path(@current_user.id, @group.id, @post.id), :method => :delete, data: { confirm: 'Are you sure?' },class: "w-fit text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
     </span>
     </span>
  <%end%>



