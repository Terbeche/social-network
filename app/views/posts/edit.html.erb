<div>
<h1>Edit Post</h1>

<%= form_with model: @post, url: user_group_post_path(@post), method: :patch, local: true do |f| %>
<div>
    <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>

<div>
  <%= f.submit "Save Changes" %>
</div>
</div>
<% end %>
</div>